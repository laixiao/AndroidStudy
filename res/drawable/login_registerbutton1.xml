<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按下-->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#247b09"
                android:endColor="#247b09"
                android:angle="270" />           
            <corners
                android:radius="18dp" />
        </shape>
    </item>
   <!-- 聚焦-->
   <item android:state_focused="true" >
        <shape>
            <gradient
                android:startColor="#ffc2b7"
                android:endColor="#ffc2b7"
                android:angle="270" />            
            <corners
                android:radius="18dp" />
        </shape>
    </item>
<!-- 默认-->
    <item>        
        <shape>
            <gradient
                android:startColor="#47515d"
                android:endColor="#47515d"
                android:angle="0" />
            <corners
                android:radius="18dp" />
        </shape>
    </item>
</selector>
