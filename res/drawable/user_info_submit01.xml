<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
  

    <!-- 按下-->
    <item android:state_pressed="true" >
        <shape  android:shape="rectangle">
            <gradient
                android:startColor="#0fdaf2"
                android:endColor="#0fdaf2"
                android:angle="270" />           
           
        </shape>
    </item>
   
<!-- 默认-->
    <item>        
        <shape>
            <gradient
                android:startColor="#89f23c"
                android:endColor="#89f23c"
                android:angle="0" />
           
        </shape>
    </item>

</selector>
