<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dip" 
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"  
    >
           
    <ImageView 
        android:id="@+id/list_item_user_logo"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" 
        android:src="@drawable/user_icon_default_main"
        />

	<TextView
	    android:id="@+id/list_item_user_name"
	    style="@style/TextTheme"
	    android:layout_alignTop="@+id/list_item_user_logo"
	    android:layout_toRightOf="@+id/list_item_user_logo"
	    android:gravity="center_vertical"
	    android:layout_marginLeft="8dp"
	    android:text="name" />

	<TextView
	    android:id="@+id/list_item_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:textSize="11sp"
	    android:layout_alignTop="@+id/list_item_user_name"
	    android:text="time" />

	<TextView
	    android:id="@+id/list_item_action_comment"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentRight="true"
	    android:layout_below="@+id/list_item_content_image"
	    android:drawableLeft="@drawable/ic_action_comment"
	    android:gravity="center"
	    android:text="评论"
	    android:textColor="#888888" />

	<TextView
	    android:id="@+id/list_item_content_text"
	    style="@style/TextTheme"
	    android:layout_alignLeft="@+id/list_item_user_name"
	    android:layout_below="@+id/list_item_user_name"
	    
	    android:text="内容 "
	    android:visibility="visible" />

	<ImageView
	    android:id="@+id/list_item_content_image"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/list_item_user_name"
	    android:layout_below="@+id/list_item_content_text"
	    android:scaleType="centerInside"
	    android:src="@drawable/bg_pic_loading"
	    android:visibility="visible" />

	<TextView
	    android:id="@+id/list_item_action_fav"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignBaseline="@+id/list_item_action_comment"
	    android:layout_alignBottom="@+id/list_item_action_comment"
	    android:layout_toLeftOf="@+id/list_item_action_comment"
	    android:drawableLeft="@drawable/ic_action_fav_normal1"
	    android:gravity="center"
	    android:layout_marginRight="10dp"
	    android:scaleType="centerInside"
	    android:text="收藏"
	    android:textColor="#888888" />

</RelativeLayout>