<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
	<ImageView 
        android:id="@+id/list_item_user_logo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop" 
        android:src="@drawable/user_icon_default_main"
        />
        <TextView
            android:id="@+id/comment_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="time" />

        <TextView
            android:id="@+id/comment_list_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/comment_list_time"
            android:background="@drawable/bg_comment_floor"
            android:gravity="center_vertical"
            android:text="1æ¥¼"
            android:textColor="#888888" />

        <TextView
            android:id="@+id/comment_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/list_item_user_logo"
            android:text="userName"
            android:textColor="@color/theme_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/comment_list_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/comment_list_name"
            android:layout_below="@+id/comment_list_name"
            android:text="comment"
            android:textColor="#666666"
            android:textSize="16sp" />

    </RelativeLayout>

</LinearLayout>