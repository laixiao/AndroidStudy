<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp"
         >
        
    
    <ImageView
        android:id="@+id/main_list_imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       
        android:src="@drawable/residebutton1" />

    <ImageView
        android:id="@+id/main_list_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:src="@drawable/list_item01" />

    <TextView
        android:id="@+id/main_list_textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/main_list_imageView1"
        android:text="TextView" />

    </RelativeLayout>

</LinearLayout>
