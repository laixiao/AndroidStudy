<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="306dp"
                android:background="@drawable/user_infobg2"
                android:orientation="vertical"
                android:visibility="visible" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/user_infotitlebg" >

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:paddingLeft="20dp"
                       android:paddingTop="6dp"
                       android:paddingBottom="6dp"
                        android:paddingRight="20dp"
                       
                        android:src="@drawable/user_infoback" />

                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dp"
                        android:src="@drawable/user_infoother" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <TextView
                        android:id="@+id/signatureEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView5"
                        android:layout_marginLeft="14dp"
                        android:layout_toRightOf="@+id/imageView5"
                        android:text="这家伙很懒。什么都没有留下..."
                        android:textColor="#ffffff" />

                    <TextView
                        android:id="@+id/userinfo_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                      
                        android:layout_alignLeft="@+id/userinfo_phonenumber"
                        android:layout_alignTop="@+id/personico"
                        
                        android:text="name"
                        android:textColor="#000000"
                        android:textAppearance="?android:attr/textAppearanceLarge" />

                    <ImageView
                        android:id="@+id/personico"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="28dp"
                        android:src="@drawable/user_infoico" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/imageView6"
                        android:layout_marginLeft="13dp"
                        android:layout_toRightOf="@+id/imageView6"
                        android:text="500"
                          android:textColor="#000000"
                        android:textAppearance="?android:attr/textAppearanceSmall" />

                    <TextView
                        android:id="@+id/userinfo_phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_below="@+id/userinfo_nickname"
                        android:background="#00000000"
                        android:ems="10"
                          android:textColor="#000000"
                        android:layout_marginTop="10dp"
                        android:text="phone" />

                    <TextView
                        android:id="@+id/userinfo_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/userinfo_phonenumber"
                        android:layout_below="@+id/userinfo_phonenumber"
                        android:text="birthday"
                        android:layout_marginTop="10dp"
                        android:textColor="#000000" />

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@+id/personico"
                        android:layout_marginTop="39dp"
                        android:src="@drawable/user_infopen" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/userinfo_birthday"
                        android:layout_below="@+id/userinfo_birthday"
                        android:src="@drawable/user_infofavour" />

                    <ImageView
                        android:id="@+id/user_infosex"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignRight="@+id/personico"
                        android:layout_below="@+id/personico"
                        android:src="@drawable/user_infosex1" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/submit01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton01"
                    android:text="相册"
                    android:textColor="#90000000" />

                <Button
                    android:id="@+id/userinfo_quit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton02"
                    android:text="动态列表"
                    android:textColor="#90000000" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton03"
                    android:text="加好友"
                    android:textColor="#90000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/button4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton04"
                    android:text="留言"
                    android:textColor="#90000000" />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton05"
                    android:text="通知"
                    android:textColor="#90000000" />

                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:drawableTop="@drawable/user_infobutton06"
                    android:text="消息"
                    android:textColor="#90000000" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>